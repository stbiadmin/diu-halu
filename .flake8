[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    *.egg,
    docs/_build
per-file-ignores =
    __init__.py:F401  # imported but unused
    tests/*:F401,F811  # test files can have unused imports
max-complexity = 10